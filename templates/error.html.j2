{% extends "base.html.j2" %}

{% block content %}

<div class="row">
	<div class="col s12">
		<div class="card red">
			<div class="card-content">
				{% if reason == "invalid-username" %}
					<span class="card-title"><b>Invalid {{search[0]|upper}}{{search[1:]}} Username</b></span>
					<p>
						The {{search[0]|upper}}{{search[1:]}} Username "<b>{{data}}</b>" seems to not follow a recognizable Username format.
					</p>
				{% elif reason == "404-not-found" %}
					<span class="card-title"><b>Could not find the thing you where looking for :(</b></span>
					<p>
						Seems like I cant find <b>{{data}}</b>, I am sorry about that.<br><br>
					</p>
				{% else %}
					<span class="card-title"><b>An Error occured</b></span>
					<p>
						{{data}}
					</p>
				{% endif %}
				
			</div>
		</div>
	</div>	
</div>
{% if search == "reddit" and reason == "invalid-username" %}
<div class="row">
	<div class="col s12">
		<div class="card teal lighten-4">
			<div class="card-content">
				<span class="card-title"><b>Examples for valid Reddit usernames formats</b></span>
				<p>
					Teekeks<br>
					/u/Teekeks<br>
					https://reddit.com/u/Teekeks
				</p>
			</div>
		</div>
	</div>	
</div>

{% endif %}

{% if search == "twitter" and reason == "invalid-username" %}
<div class="row">
	<div class="col s12">
		<div class="card teal lighten-4">
			<div class="card-content">
				<span class="card-title"><b>Examples for valid Twitter usernames formats</b></span>
				<p>
					Teekeks<br>
					@Teekeks<br>
					https://twitter.com/Teekeks<br>
					https://twitter.com/Teekeks/<br>
					https://twitter.com/@Teekeks<br>
					https://twitter.com/#!/Teekeks
				</p>
			</div>
		</div>
	</div>	
</div>

{% endif %}

{% endblock %}
