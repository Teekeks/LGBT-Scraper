{% if error is defined %}
	<div class="row">
		<div class="col s12">
			<div class="card red darken-1">
				<div class="card-content white-text">
					<span class="card-title">Error</span>
					<p>User not found</p>
				</div>
			</div>
		</div>
	</div>
{% endif %}

{% if user is defined %}
<div class="row">
	<div class="col s12">
		<div class="center"><img src="{{ user.profile_pic }}"></div>
		<h5 class="center"><a href="https://reddit.com/u/{{ user.name }}/" target="_blank" rel="noopener noreferrer">/u/{{ user.name }}</a></h5>
		<div class="center-align gray">redditor since {{ user.account_age }}</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<ul class="tabs">
			<li class="tab col s6"><a href="#general_info_tab">Overview</a></li>
			<li class="tab col s6"><a href="#detail_tab">Details</a></li>
		</ul>
	</div>
</div>
<div id="general_info_tab" class="col s12">
	<ul class="collection">
		<li class="collection-item">Total Karma: {{ user.comment_karma + user.link_karma }}</li>
		<li class="collection-item">Scraped Content: {{ comment_count + post_count }}</li>
		<li class="collection-item">LGBT+ Content: {{ user.good|length }}</li>
		<li class="collection-item">Red flag Content: {{ user.flag|length }}</li>
		<li class="collection-item">Related Content: {{ user.related|length }}</li>
	</ul>
</div>
<div id="detail_tab" class="col s12">
	<ul class="collection">
		<li class="collection-item">Comment Karma: {{ user.comment_karma }}</li>
		<li class="collection-item">Link Karma: {{ user.link_karma }}</li>
		<li class="collection-item">Scraped Comments: {{ comment_count }}</li>
		<li class="collection-item">Scraped Posts: {{ post_count }}</li>
	</ul>
</div>

<div class="row">
	<div class="col s12">
		<ul class="tabs">
			<li class="tab col s4 green lighten-4"><a href="#lgbt_content" class="">LGBT+ ({{ user.good|length }})</a></li>
			<li class="tab col s4 red lighten-4"><a href="#flag_content">Red flag ({{ user.flag|length }})</a></li>
			<li class="tab col s4 blue lighten-4"><a href="#related_content">Related ({{ user.related|length }})</a></li>
		</ul>
	</div>
</div>

<div id="lgbt_content" class="col s12">
	<ul class="collection">
		{% for comment in user.good %}
			<li class="collection-item green lighten-3 avatar">
				<i class="material-icons circle green lighten-1">{% if comment.type == 'comment' %}comment{% else %}email{% endif %}</i>
				<span class="title"><b>{{ comment.title }}</b><br/>
					<b>/r/{{ comment.sub }}</b> | Score: {{ comment.score }} | {{ comment.days_since }}{% if comment.days_since != 'today' %} ago{% endif %}</span>
				<p>{{ comment.body }}</p>
				<a href="{{ comment.url }}" class="secondary-content" target="_blank" rel="noopener noreferrer"><i class="material-icons">share</i></a>
			</li>
		{% endfor %}
	</ul>
</div>

<div id="flag_content" class="col s12">
	<ul class="collection">
		{% for comment in user.flag %}
			<li class="collection-item red lighten-3 avatar">
				<i class="material-icons circle red lighten-1">{% if comment.type == 'comment' %}comment{% else %}email{% endif %}</i>
				<span class="title"><b>{{ comment.title }}</b><br/>
					<b>/r/{{ comment.sub }}</b> | Score: {{ comment.score }} | {{ comment.days_since }}{% if comment.days_since != 'today' %} ago{% endif %}</span>
				<p>{{ comment.body }}</p>
				<a href="{{ comment.url }}" class="secondary-content" target="_blank" rel="noopener noreferrer"><i class="material-icons">share</i></a>
			</li>
		{% endfor %}
	</ul>
</div>

<div id="related_content" class="col s12">
	<ul class="collection">
		{% for comment in user.related %}
			<li class="collection-item blue lighten-3 avatar">
				<i class="material-icons circle blue lighten-1">{% if comment.type == 'comment' %}comment{% else %}email{% endif %}</i>
				<span class="title"><b>{{ comment.title }}</b><br/>
					<b>/r/{{ comment.sub }}</b> | Score: {{ comment.score }} | {{ comment.days_since }}{% if comment.days_since != 'today' %} ago{% endif %}</span>
				<p>{{ comment.body }}</p>
				<a href="{{ comment.url }}" class="secondary-content" target="_blank" rel="noopener noreferrer"><i class="material-icons">share</i></a>
			</li>
		{% endfor %}
	</ul>
</div>

{% endif %}